                    android:layout_below="@+id/dialpad_4"
                    android:text="GHI" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/dialpad_5_holder"
                style="@style/DialpadButtonStyle"
                android:layout_width="@dimen/d75"
                android:layout_height="@dimen/d75"
