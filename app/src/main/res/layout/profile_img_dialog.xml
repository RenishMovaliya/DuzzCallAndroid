<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/appcolour"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/d30"
                android:fontFamily="@font/poppins_bold"
                android:includeFontPadding="false"
                android:text="@string/profile"
                android:textColor="@color/white"
                android:textSize="@dimen/dt22" />

            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="@dimen/d30"
                android:layout_height="@dimen/d30"
                android:layout_gravity="right"
                android:layout_marginRight="@dimen/d10"
                android:padding="@dimen/d4"
                android:src="@drawable/ic_delete" />
        </androidx.appcompat.widget.Toolbar>


        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/d20"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/d10"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d50"
                    android:layout_height="@dimen/d50"
                    android:src="@drawable/ic_profile_camera" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:text="Camera"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dt15"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_gallery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="@dimen/d10"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/d50"
                    android:layout_height="@dimen/d50"
                    android:src="@drawable/ic_gallery" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_light"
                    android:text="Gallery"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dt15"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>